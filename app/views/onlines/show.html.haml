%h1.profile-header= @online.title
= edit_online_path(username: @online.user.username, id: @online.id) if current_user == @online.user

.row
  .col-xs-3.user-info-block
    = render 'onlines/user_block', user: @online.user
  .col-xs-9
    %h3= link_to @online.event.title, event_path(@online.event)
    %small= @online.description

%p= image_tag @online.photo.url(:thumb) if @online.photo

-# if current_user can edit online
= render 'messages/form', message: current_user.messages.new(online_id: @online.id) if current_user == @online.user

