%div{role: 'spinner'}

= form_tag '', role: 'last-message-form' do
  = hidden_field_tag :online_id, @online.id

%div.messages-bock{role: 'messages-container'}
  - @online.messages.each do |message|
    = render "messages/single_message", message: message

