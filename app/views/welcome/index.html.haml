.index__events
  %h2 Cобытия
  = render "shared/events", events: @events
  .pull-right= link_to "Все события", events_path

.index__photos
  %h2 Фото
  .index__photos-item
    - photo = @photos.first
    = link_to user_online_path(username: photo.online.user.username, id: photo.online_id) do
      = image_tag photo.file.thumb.url,  style: "width: 200px", alt: photo.online.title, title: photo.online.title
  .index__photos-item
    - @photos[1,4].each do |photo|
      = link_to user_online_path(username: photo.online.user.username, id: photo.online_id) do
        = image_tag photo.file.thumb.url, alt: photo.online.title, title: photo.online.title
  .index__photos-item
    - @photos[5, 20].each do |photo|
      = link_to user_online_path(username: photo.online.user.username, id: photo.online_id) do
        = image_tag photo.file.thumb.url,  style: "width: 50px", alt: photo.online.title, title: photo.online.title

  .clearfix
  .pull-right= link_to "Все фото", photos_path


