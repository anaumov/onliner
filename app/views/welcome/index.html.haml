- @onlines.each do |online|
  %article.media
    = link_to online_path(online), class: "icon pull-left" do
      = image_tag online.photo.thumb.url, class: "media-object. mg-circle"
    .pull-right
      %div{style: "float: left; margin-right: 15px; "}
      = image_tag online.user.avatar.thumb,url, style: "width:32px;" unless online.user.avatar.blank?
      %div{:style => "float: left;padding-top: 5px;color: #c3c3c3;font-size: 14px;"}
        = image_tag "comment.png", style: "vertical-align: middle;"
        = online.messages.count
    .media-body.col-md-9{style: "margin-left:15px;"}
      %h3
        = link_to online.title, online_path(online)
        %span.label.label-danger live
      %p= online.description
      %h5= I18n.l online.created_at, format: :time_date_year